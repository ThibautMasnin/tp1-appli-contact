<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:verticalScrollbarPosition="defaultPosition" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity2">

    <ImageView
        android:id="@+id/image"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ah"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Titre super méga long de la mort qui tue pas encore de la masnin attitude"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_alignLeft="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Description surpeeeeeeeeeeer mégaaaaaaaaaaaaaaaa looooooooongue"
        android:layout_width="10dp" />

    <CheckBox
        android:id="@+id/fav"
        android:layout_below="@id/description"
        android:layout_alignLeft="@id/description"
        android:layout_alignBottom="@id/image"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/starStyle" />

    <Button
        android:layout_width="125dp"
        android:layout_below="@id/description"
        android:layout_alignTop="@id/fav"
        android:layout_alignBottom="@id/image"
        android:layout_toRightOf="@id/fav"
        android:layout_marginLeft="25dp"
        android:text="Voir plus"
        android:layout_height="10dp" />


    <ImageView
        android:id="@+id/image2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ah"
        android:layout_below="@id/image"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image2"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Titre super méga long de la mort qui tue pas encore de la masnin attitude"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/description2"
        android:layout_height="wrap_content"
        android:layout_below="@id/title2"
        android:layout_alignLeft="@id/title2"
        android:layout_alignRight="@id/title2"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Description surpeeeeeeeeeeer mégaaaaaaaaaaaaaaaa looooooooongue"
        android:layout_width="10dp" />

    <CheckBox
        android:id="@+id/fav2"
        android:layout_below="@id/description2"
        android:layout_alignLeft="@id/description2"
        android:layout_alignBottom="@id/image2"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/starStyle" />

    <Button
        android:layout_width="125dp"
        android:layout_below="@id/description2"
        android:layout_alignTop="@id/fav2"
        android:layout_alignBottom="@id/image2"
        android:layout_toRightOf="@id/fav2"
        android:layout_marginLeft="25dp"
        android:text="Voir plus"
        android:layout_height="10dp" />
</RelativeLayout>